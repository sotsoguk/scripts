" syntax highlighting
syntax on

" no cocp
set nocp

" adjust synatx highlight to dark background
set background=dark

" show current line and column
set ruler

" no wordwrap
set wrap linebreak

" activate backspace
set backspace=2

" auto indent line
set autoindent

" smart indent
set smartindent

" change tabs to spaces
set expandtab

" tabstop size
set tabstop=4

set shiftwidth=4

set softtabstop=4


" activate automatic language detection
filetype plugin indent on

" Search options
" ignore upper / lowercas
set ignorecase

" highlight result
set hlsearch

" show results while typing
set incsearch


